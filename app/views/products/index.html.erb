<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Valor usd</th>
      <th>Valor cop</th>
      <th>Impuesto</th>
      <th>Seguro</th>
      <th>Flete</th>
      <th>Aduana</th>
      <th>Total envio usd</th>
      <th>Total envio cop</th>
      <th>Action</th>
      <th>Bought</th>
      <th>Valor maximo cop</th>
      <th>Peso</th>
      <th>Total cost</th>
      <th>Exchange rate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.valor_usd %></td>
        <td><%= product.valor_cop %></td>
        <td><%= product.impuesto %></td>
        <td><%= product.seguro %></td>
        <td><%= product.flete %></td>
        <td><%= product.aduana %></td>
        <td><%= product.total_envio_usd %></td>
        <td><%= product.total_envio_cop %></td>
        <td><%= product.action %></td>
        <td><%= product.bought %></td>
        <td><%= product.valor_maximo_cop %></td>
        <td><%= product.peso %></td>
        <td><%= product.total_cost %></td>
        <td><%= product.exchange_rate %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

